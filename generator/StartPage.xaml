<Page x:Class="generator.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:generator"
      mc:Ignorable="d" 
      
      Title="StartPage" Width ="auto" Height="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid>
        
        <StackPanel HorizontalAlignment="Stretch" Height="auto" Margin="10" VerticalAlignment="Center" Width="auto">
            <Label x:Name="Title" Content="Welcome to the Bracket Generator" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" FontFamily="Script MT Bold" Height="auto" Width="auto" FontSize="48" Foreground="Black"/>
            <Button x:Name="InputPage" Content="Create tournir" FontFamily="Script MT Bold" FontSize="22" Height="auto" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Background="#FFEEECEC" Click="InputPage_Click"></Button>
            <Button x:Name="LoadPage" Content="Load tournir" FontFamily="Script MT Bold" FontSize="22" Height="auto" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Background="#FFEEECEC" Click="LoadPage_Click"></Button>
        </StackPanel>

    </Grid>
</Page>
